<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/workAlarm_waitForDealWithLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_item_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/department_ischecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_word_padding"
            android:src="@drawable/btn_check_nor"
            android:visibility="gone" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_toRightOf="@id/department_ischecked"
            android:gravity="center_vertical|left"
            android:text="@string/waitForDealWith"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/departmentRightRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/common_padding"
            android:src="@drawable/row_item" />

        <TextView
            android:id="@+id/pCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/departmentRightRow"
            android:paddingRight="17dp"
            android:textColor="#999999"
            android:textSize="18sp"

            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:src="#ededef" />
</LinearLayout><!-- From: file:/D:/oa/mobileoa2.0/app/src/main/res/layout/view_contact_department_item.xml -->