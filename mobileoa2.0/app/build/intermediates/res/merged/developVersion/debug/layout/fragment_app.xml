<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:main_title="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededef">

    <com.idxk.mobileoa.android.ui.views.widget.MainTitleView
        android:id="@+id/fragment_home_titleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        main_title:leftImage="@drawable/magnifying"
        main_title:rightImage="@drawable/magnifying"
        main_title:showLeft="false"
        main_title:showRight="false"
        main_title:titleCenter="应用"></com.idxk.mobileoa.android.ui.views.widget.MainTitleView>


    <RelativeLayout
        android:id="@+id/fragment_app_zmtbi"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_item_height"
        android:layout_below="@id/fragment_home_titleHome"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="onLayoutClick">

        <ImageView
            android:id="@+id/note_icon"
            android:layout_width="@dimen/mian_icon_wh"
            android:layout_height="@dimen/mian_icon_wh"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fifteendp"
            android:src="@drawable/wiznote" />

        <TextView
            android:id="@+id/fragment_home_workalarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/note_icon"
            android:paddingLeft="@dimen/title_common_padding"
            android:text="@string/zhongmintoubiji"
            android:textColor="#343434" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/title_common_padding"
            android:src="@drawable/row_item" />
    </RelativeLayout>


    <View
        android:id="@+id/fragment_home_secondLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fragment_app_zmtbi"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />


    <RelativeLayout
        android:id="@+id/fragment_app_gzt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_item_height"
        android:layout_below="@id/fragment_home_secondLine"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="onLayoutClick">

        <ImageView
            android:id="@+id/note_icon_gzt"
            android:layout_width="@dimen/mian_icon_wh"
            android:layout_height="@dimen/mian_icon_wh"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fifteendp"
            android:src="@drawable/moneyicon" />

        <TextView
            android:id="@+id/fragment_home_workalarm_gzt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/note_icon_gzt"
            android:paddingLeft="@dimen/title_common_padding"
            android:text="@string/zhongmintougzt"
            android:textColor="#343434" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/title_common_padding"
            android:src="@drawable/row_item" />
    </RelativeLayout>


    <View
        android:id="@+id/fragment_home_secondLine_gzt"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fragment_app_gzt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
</RelativeLayout><!-- From: file:/D:/oa/mobileoa2.0/app/src/main/res/layout/fragment_app.xml -->