<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <com.idxk.mobileoa.android.ui.views.widget.CircleImageView
        android:id="@+id/searchUser_userPic"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/tendp"
        android:layout_marginRight="@dimen/tendp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/searchUser_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tendp"
        android:layout_toRightOf="@id/searchUser_userPic"
        android:text="@string/app_name"
        android:textColor="#333333"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/searchUser_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchUser_name"
        android:layout_toRightOf="@id/searchUser_userPic"
        android:paddingBottom="@dimen/tendp"
        android:text="@string/app_name"
        android:textColor="#333333"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/msgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/email" />

    <ImageView
        android:id="@+id/callPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/msgIcon"
        android:src="@drawable/mobile" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#e5e5e4" />
</RelativeLayout><!-- From: file:/D:/oa/mobileoa2.0/app/src/main/res/layout/adapter_item_searchuser.xml -->