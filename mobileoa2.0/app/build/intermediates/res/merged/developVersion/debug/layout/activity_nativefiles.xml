<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:main_title="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/workAlarmBackgroundColor">

    <com.idxk.mobileoa.android.ui.views.widget.MainTitleView
        android:id="@+id/nativeFiles_titleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        main_title:leftImage="@drawable/title_back"
        main_title:showLeft="true"
        main_title:titleCenter="本地文件" />

    <RelativeLayout
        android:id="@+id/picture_layout"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_below="@id/nativeFiles_titleHome"
        android:background="@color/workAlarmLayoutBackColor"
        android:gravity="center">

        <ImageView
            android:id="@+id/nativeFiles_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/fifteendp"
            android:layout_marginStart="@dimen/fifteendp"
            android:src="@drawable/work_toast_icon_main" />

        <TextView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/fifteendp"
            android:layout_marginStart="@dimen/fifteendp"
            android:layout_toEndOf="@id/nativeFiles_icon"
            android:layout_toRightOf="@id/nativeFiles_icon"
            android:gravity="center"
            android:text="@string/picture"
            android:textColor="@color/workAlarmTextColor"
            android:textSize="17sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/common_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/row_item" />
        </FrameLayout>
    </RelativeLayout>

    <View
        android:id="@+id/nativeFiles_secondLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/picture_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/workAlarmLineColor" />


    <RelativeLayout
        android:id="@+id/music_layout"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_below="@id/nativeFiles_secondLine"
        android:background="@color/workAlarmLayoutBackColor"
        android:gravity="center">

        <ImageView
            android:id="@+id/nativeFiles_musicIcon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/fifteendp"
            android:layout_marginStart="@dimen/fifteendp"
            android:src="@drawable/work_toast_icon_main" />

        <TextView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/fifteendp"
            android:layout_marginStart="@dimen/fifteendp"
            android:layout_toEndOf="@id/nativeFiles_musicIcon"
            android:layout_toRightOf="@id/nativeFiles_musicIcon"
            android:gravity="center"
            android:text="@string/music"
            android:textColor="@color/workAlarmTextColor"
            android:textSize="17sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/common_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/row_item" />
        </FrameLayout>
    </RelativeLayout>

    <View
        android:id="@+id/nativeFiles_thirdLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/music_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/workAlarmLineColor" />


    <RelativeLayout
        android:id="@+id/phoneMemory_layout"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_below="@id/nativeFiles_thirdLine"
        android:background="@color/workAlarmLayoutBackColor"
        android:gravity="center">

        <ImageView
            android:id="@+id/phoneMemory_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/fifteendp"
            android:layout_marginStart="@dimen/fifteendp"
            android:src="@drawable/work_toast_icon_main" />

        <TextView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/fifteendp"
            android:layout_marginStart="@dimen/fifteendp"
            android:layout_toEndOf="@id/phoneMemory_icon"
            android:layout_toRightOf="@id/phoneMemory_icon"
            android:gravity="center"
            android:text="@string/phoneMemory"
            android:textColor="@color/workAlarmTextColor"
            android:textSize="17sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/common_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/row_item" />
        </FrameLayout>
    </RelativeLayout>

    <View
        android:id="@+id/nativeFiles_fourthLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/phoneMemory_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/workAlarmLineColor" />


    <RelativeLayout
        android:id="@+id/sdCard_layout"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_below="@id/nativeFiles_fourthLine"
        android:background="@color/workAlarmLayoutBackColor"
        android:gravity="center">

        <ImageView
            android:id="@+id/sdCard_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/fifteendp"
            android:layout_marginStart="@dimen/fifteendp"
            android:src="@drawable/work_toast_icon_main" />

        <TextView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/fifteendp"
            android:layout_marginStart="@dimen/fifteendp"
            android:layout_toEndOf="@id/sdCard_icon"
            android:layout_toRightOf="@id/sdCard_icon"
            android:gravity="center"
            android:text="@string/sdCard"
            android:textColor="@color/workAlarmTextColor"
            android:textSize="17sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/common_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/row_item" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout><!-- From: file:/D:/oa/mobileoa2.0/app/src/main/res/layout/activity_nativefiles.xml -->